{
  "name": "ngx-retroarch",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "copy:imgs": "cp -r src/assets/assets dist/elements/assets",
    "copy:libs": "cp src/assets/*.{txt,min.js,wasm} dist/elements",
    "copy:index": "cp src/assets/demo.html dist/elements/index.html",
    "copy:rom": "cp src/assets/roms/*.* dist/elements",
    "copy:assets": "npm run copy:imgs && npm run copy:libs && npm run copy:index",
    "build:components": "ng build --configuration production --project components",
    "build:elements": "ng build --configuration production --project elements --output-hashing none && npm run pack:elements && npm run copy:assets && cp projects/elements/package.json dist/elements",
    "pack:elements": "cat ./dist/elements/{runtime,polyfills,main}.js > dist/elements/elements.js && ls -lah dist/elements/elements.js",
    "build:all": "npm run build:components && npm run build:elements",
    "clean": "rimraf dist",
    "start:app": "wait-on dist/components/fesm2015 && ng serve --poll 2000",
    "watch:lib": "ng build components --watch",
    "watch:all": "npm run clean && npm-run-all watch:lib start:app",
    "demo": "npm run build:all && npm run copy:rom && npm run serve:demo",
    "serve:demo": "npx http-server ./dist/elements/ -p 4300",
    "publish": "npm publish dist/elements --access=public"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.4",
    "@angular/common": "~12.2.4",
    "@angular/compiler": "~12.2.4",
    "@angular/core": "~12.2.4",
    "@angular/elements": "^12.2.4",
    "@angular/forms": "~12.2.4",
    "@angular/platform-browser": "~12.2.4",
    "@angular/platform-browser-dynamic": "~12.2.4",
    "@angular/router": "~12.2.4",
    "@ngx-translate/core": "^13.0.0",
    "angular-animations": "^0.11.0",
    "document-register-element": "^1.7.2",
    "keycode-js": "^3.1.0",
    "localforage": "^1.10.0",
    "ngx-simple-modal": "^1.4.17",
    "range-slider-element": "^1.0.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "unzipit": "^1.3.5",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.4",
    "@angular/cli": "~12.2.4",
    "@angular/compiler-cli": "~12.2.4",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@types/resize-observer-browser": "^0.1.6",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.2.1",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5",
    "wait-on": "^6.0.0"
  }
}
